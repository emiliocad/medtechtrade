<tbody>
    <?php foreach ($this->favoritos as $favorito): ?>
        <tr class="<?= $favorito->active ? 'activo' : 'inactivo' ?>" 
            id ="<?= $favorito->id ?>">
            <td >
                <?php
                $url = (is_null($favorito->imagen)) ?
                        '/theme/default/image/no_images.png' :
                        '/media/catalog/product/' . $favorito->imagen
                ?>
                <img src="<?= $url ?>" 
                     alt="<?= $favorito->equipo ?>"
                     width="24px" height="24px">
            </td>


            <td>
                <?= $this->escape($favorito->equipo) ?>
            </td>


            <td>
                <?= $this->escape($favorito->precio) ?>
            </td>

            <td>
                <?= $this->escape($favorito->categoria) ?>
            </td>

            <td>
                <?= $this->escape($favorito->estadoequipo) ?>
            </td>

            <td>
                <?= $this->escape($favorito->fabricante) ?>
            </td>

            <td>
                <?= $this->escape($favorito->calidad) ?>
            </td>


            <td>

                <?=
                $this->ajaxLink(
                        "<img class ='imagen-delete'>", 
                        "/user/reserva/borrarreserva/format/json", array(
                    'dataType' => 'json',
                    'beforeSend' =>
                    'myBeforeSendCallbackJsFunc();',
                    'complete' =>
                    'myCompleteCallbackJsFunc(data);',
                    'method' => 'POST'), array('id' => $favorito->id)
                );
                ?>
                <?php
                $link =
                        $this->url(
                        array(
                    'slug' => $favorito->slug
                        ), 'slugEquipment', true)
                ?>
                <a href="<?= $link ?>" title="<?= $this->translate('ver equipo') ?>" >
                    <img class ="imagen-see">
                </a>

            </td>

        </tr>
    <?php endforeach; ?>
</tbody>
</table>
<?=
$this->paginationControl(
        $this->favoritos, 'Sliding', 'reserva/_pag.phtml'
);
?>
