<h2>
    <?= $this->translate('equipo reservados') ?>
</h2>
<table border="1" class="listado">
    <thead>
    <th>
        <?= $this->translate('imagen') ?>
    </th>
    <th>
        <?= $this->translate('equipo') ?>
    </th>
    <th>
        <?= $this->translate('precio') ?>
    </th>
    <th>
        <?= $this->translate('categoria') ?>
    </th>
    <th>
        <?= $this->translate('estado equipo') ?>
    </th>
    <th>
        <?= $this->translate('fabricante') ?>
